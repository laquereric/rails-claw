<div class="flex justify-between items-center">
  <div>
    <h1 class="text-2xl font-bold text-gray-900"><%= @title %></h1>
    <% if @subtitle %>
      <p class="text-sm text-gray-500"><%= @subtitle %></p>
    <% end %>
  </div>
  <% if actions? %>
    <div class="flex gap-2">
      <%= actions %>
    </div>
  <% end %>
</div>
